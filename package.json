      "email": "pzinn@unimelb.edu.au"
    }
  ],
  "engine": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "@types/express": "^4.17.7",
    "@types/node": "^14.0.26",
    "@types/socket.io": "^2.1.10",
    "@types/socket.io-client": "^1.4.33",
    "@types/ssh2": "^0.5.44",
    "cookie": "^0.4.1",
    "express": "4.16.1",
    "express-winston": "3.1.0",
    "http-auth": "3.2.3",
    "prismjs": "^1.20.0",
    "serve-favicon": "^2.5.0",
    "serve-static": "^1.14.1",
    "socket.io": "2.2.0",
    "socket.io-client": "2.2.0",
    "socketio-file-upload": "^0.7.2",
    "ssh2": "0.8.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "winston": "^3.3.2"
  },
  "scripts": {
    "tsc": "tsc && tsc -p src/frontend",
    "build": "npm run lint && npm run format && npm run tsc && ./node_modules/.bin/webpack",
    "start": "node dist/server/index.js",
    "debug-start": "npm run tsc && webpack --config webpack.debug-config.js && npm start",
    "basic": "npm run build && npm start docker",
    "local": "npm run build && npm start local",
    "debug": "npm run tsc && webpack --config webpack.debug-config.js && npm start local",
    "twoMachines": "npm run build && npm start ssh",
    "twoMachines_forever": "npm run build && forever start -l $HOME/webm2.logs/forever.log -o $HOME/webm2.logs/out.log -e $HOME/webm2.logs/err.log --append dist/index.js ssh",
    "stop": "kill `ps ax | grep Server | grep -v monitor | grep node | awk '{print $1}'`",
    "lint": "eslint src/server/*.ts src/server/startupConfigs/*.ts src/frontend/*.ts --fix",
    "format": "prettier --write src/server/*.ts src/server/startupConfigs/*.ts src/frontend/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:pzinn/Macaulay2Web.git"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.0.5",
    "webpack": "^5.0.0-beta.22",
    "webpack-cli": "^4.0.0-beta.8"
  }
}
