{
  "name": "Macaulay2Web",
  "version": "3.1.0",
  "description": "Web apps for Macaulay2",
  "contributors": [
    {
      "name": "Franziska Hinkelmann",
      "email": "franziska.hinkelmann@gmail.com"
    },
    {
      "name": "Lars Kastner",
